@model PersonAddRequest
@{
	ViewBag.Title = "Create Person";
}

<a asp-controller="Person" asp-action="Index" class="link-hover"> Back to Persons List</a>
<h2> Create Person </h2>

<div class="w-50">
	<form  asp-controller="Person" asp-action="create" method="post">

		@*Person Name*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="PersonName" class="form-label pt">Person Name</label>
			</div>
			<div class="flex-1">
				<input asp-for="PersonName"  class="form-input" />
			</div>
		</div>

		@*Email*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="Email" class="form-label pt">Email</label>
			</div>
			<div class="flex-1">
				<input asp-for="Email"  class="form-input" />
			</div>
		</div>
		@*DateOfBirth*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="DateOfBirth" class="form-label pt">DateOfBirth</label>
			</div>
			<div class="flex-1">
				<input asp-for="DateOfBirth" class="form-input" />
			</div>
		</div>
		
		@*Gender*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="Gender" class="form-label pt">Gender</label>
			</div>
			<div class="flex-1">
				@{
					string [] Gender = (string[])Enum.GetNames(typeof(GenderOptions));
				}
				@foreach(var gender in Gender)
				{
					<input type="radio" asp-for="Gender" value="@gender" />
					<label for="@gender	">@gender</label>
				}
			</div>
		</div>
		@*Country*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="CountryId" class="form-label pt">Country</label>
			</div>
			<div class="flex-1">
				<select asp-for="CountryId" class="form-input" asp-items="@ViewBag.Countries">
					<option value="">Please Select</option>
					
				</select>
			</div>
		</div>
		@*Address*@
		<div class="form-field flex">
			<div class="w-25">
				<label asp-for="Address" class="form-label pt">Address</label>
			</div>
			<div class="flex-1">
				<textarea asp-for="Address" class="form-input"> </textarea>
			</div>
		</div>

		@*RecieveNewLetter*@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<input asp-for="ReceiveNewLetters" value="true"/>
				<label asp-for="ReceiveNewLetters" class="form-label">RecieveNewLetter</label>
			</div>
		</div>
		@*Submit*@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<button class="button button-green-back">Create</button>

				@if (ViewBag.Errors != null)
				{
					<div class="text-red ml">
						<ul>
							@foreach (string error in ViewBag.Errors)
							{
								<li class="ml">@error</li>
							}
						</ul>
					</div>
				}
			</div>
		</div>
	</form>
</div>